{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015"],
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "stripInternal": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*"
  ]
}
